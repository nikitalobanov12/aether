{
  "name": "aether-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter '*' dev",
    "lint": "bun run --filter '*' lint",
    "typecheck": "bun run --filter '*' typecheck",
    "clean": "bun run --filter '*' clean && rm -rf node_modules",
    "web:dev": "bun run --filter '@aether/web' dev",
    "web:build": "bun run --filter '@aether/web' build",
    "landing:dev": "bun run --filter '@aether/landing' dev",
    "landing:build": "bun run --filter '@aether/landing' build"
  },
  "devDependencies": {
    "typescript": "^5.8.0"
  }
}
