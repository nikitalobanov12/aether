# When adding additional environment variables, the schema in "/src/env.js"
# should be updated accordingly.

# Better Auth
# Secret used by Better Auth (min 32 chars)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=""
BETTER_AUTH_URL="http://localhost:3000"

# Better Auth GitHub OAuth (optional)
BETTER_AUTH_GITHUB_CLIENT_ID=""
BETTER_AUTH_GITHUB_CLIENT_SECRET=""

# Database
# Local development: postgresql://postgres:password@localhost:5433/dayflow
# Production (Neon): postgresql://user:password@host/db?sslmode=require
DATABASE_URL="postgresql://postgres:password@localhost:5433/dayflow"

# Google OAuth (for authentication and Calendar integration)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Hugging Face (AI task scheduling and creation)
HUGGINGFACE_API_KEY=""

# Stripe (payments and subscriptions)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PRICE_ID=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
